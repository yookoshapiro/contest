<?php

declare(strict_types=1);

$_ENV['SHELL_ACTIVE'] = true;
date_default_timezone_set('UTC');

require_once __DIR__ . '/lib/vendor/autoload.php';

$container = require_once root_path('lib/files/bootstrap.php');

$app = $container->make(Symfony\Component\Console\Application::class);

# Create
$app->add( $container->make(Artisan\Create\User::class) );

# Datenbank
$app->add( $container->make(Artisan\Database\Clean::class) );
$app->add( $container->make(Artisan\Database\Export::class) );
$app->add( $container->make(Artisan\Database\Import::class) );
$app->add( $container->make(Artisan\Database\Migrate::class) );
$app->add( $container->make(Artisan\Database\Seed::class) );

$app->run();